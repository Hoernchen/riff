{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["ruff", "charliermarsh/ruff-pre-commit"],
      "groupName": "ruff",
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor"],
      "schedule": ["every sunday at noon"]
      "automerge": true
    },
    {
      "matchUpdateTypes": ["patch"],
      "schedule": ["noon of the first day of the month"]
    }
  ]
}
